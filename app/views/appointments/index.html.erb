<div class="row">
  <div class="col-md-6 text-left">
    <%= link_to 'Nueva reserva', new_appointment_path, class: 'btn btn-primary' %>
  </div>
</div>

<br>

<div class="card">
  <h5 class="card-header py-3 d-flex flex-row align-items-center justify-content-between font-weight-bold text-primary">
    Reservas
  </h5>

  <div class="card-body">
    <table class="table table-bordered text-center">
      <thead>
        <tr>
          <th>Fecha</th>
          <th>Hora Inicio</th>
          <th>Hora Termino</th>
          <th colspan="3">Opciones</th>
        </tr>
      </thead>

      <tbody>
        <% @appointments.each do |appointment| %>
          <tr>
            <td><%= appointment.date %></td>
            <td><%= appointment.start_hour %></td>
            <td><%= appointment.end_hour %></td>
            <td><%= link_to 'Show', appointment %></td>
            <td><%= link_to 'Edit', edit_appointment_path(appointment) %></td>
            <td><%= link_to 'Destroy', appointment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>

<br>
